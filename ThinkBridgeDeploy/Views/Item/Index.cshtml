<style>
    .required:after {
        content: " *";
        color: red;
    }
    .customTable{
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 1px 1px 14px 2px #ccc;
    }
    .pink tr:nth-child(even){
        background-color :#f8f6ff;
    }
    .pink th{
        height : 45px;
        background-color : black;
        color:#ffffff;
    }
    .pink tr td, .pink tr th{
        font-family: serif;
        font-size: 18px;
        padding:4px 20px !important;
    }
</style>

<div class="container">
    <form>
        <h3 style="text-align:center" class="m-3">All Items</h3>

        <div class="row m-3">
            <div class="col-md-1">

            </div>
            <div class="col-md-10">
                <button type="button" style="float:right" class="btn btn-primary" data-toggle="modal" data-target="#ItemModal" id="btnAddItem">Add Item</button>
            </div>
            <div class="col-md-1">

            </div>
        </div>

        <br />

        <div class="row" id="OrgData">
            <div class="col-md-1">

            </div>
            <div class="col-md-10 customTable" style="padding:0px">
                <table class="table table-striped pink" id="tbItem">
                    <thead>
                        <tr>
                            <th scope="col">Sr No.</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tblItem"></tbody>
                </table>
            </div>
            <div class="col-md-1">

            </div>
        </div>

        <div style="margin: 0 auto;text-align: center;" id="NoDataFound">
            <div><span class="title-span">No Data Found</span></div>
            <img src="~/Images/No-Data-Found.png" />
        </div>
       
        <div class="modal fade" id="ItemModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="itemModalLabel">Add Item</h5>
                    </div>
                    <div class="modal-body">
                        <hidden id="hdnItemId"></hidden>
                        <div class="row m-3 form-group">
                            <div class="col-md-4" style="text-align: left">
                                <label class="required">Name</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txtName" placeholder="Please enter name">
                            </div>
                        </div>
                        <div class="row m-3 form-group">
                            <div class="col-md-4" style="text-align: left">
                                <label class="required">Description</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txtDescription" placeholder="Please enter description">
                            </div>
                        </div>
                        <div class="row m-3 form-group">
                            <div class="col-md-4" style="text-align: left">
                                <label class="required">Category</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txtCategory" placeholder="Please enter category">
                            </div>
                        </div>
                        <div class="row m-3 form-group">
                            <div class="col-md-4" style="text-align: left">
                                <label class="required">Price</label>
                            </div>
                            <div class="col-md-8">
                                <input type="number" class="form-control" id="txtPrice" placeholder="Please enter price">
                            </div>
                        </div>
                        <div class="row m-3 form-group">
                            <div class="col-md-4" style="text-align: left">
                                <label>Image of Item</label>
                            </div>
                            <div class="col-md-8">
                                <input type="file" class="form-control" id="txtItemImage" placeholder="Enter image of an item" accept=".png, .jpg">
                            </div>
                        </div>
                        <div class="row m-3 form-group">
                            <div class="col-md-4">
                                &nbsp;
                            </div>
                            <div class="col-md-8">
                                <label id="lblExistingFileName" style="color:green"></label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <div type="button" class="btn btn-primary" onclick="SaveItem()">Save</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="validateionMOdal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Please correct following things : </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="validateMBody"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/Script/Item.js"></script>
